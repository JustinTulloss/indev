#!/usr/bin/env node

!/indev/.test(process.env.DEBUG) &&
  ( process.env.DEBUG = (process.env.DEBUG || '') + ',indev:run,indev:read,indev:exec,indev:tasks,devfile:*' );

var opt     = require('optimist'),

    help    = require('../lib/help'),
    version = require('../lib/version'),
    ondev   = require('../');

var argv = opt
      .options('file', { alias: 'f' })
      .options('version', { alias: 'v' })
      .options('help', { alias: 'h' })
      .argv;

if(argv.help) help();
if(argv.version) version();

ondev(argv);
